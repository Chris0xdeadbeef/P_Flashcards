@component('components/layout')

  <h1>Modifier le deck</h1>

  <div class="deck-edit-container" style="max-width: 500px; margin: 2rem auto;">
    <form
      action="{{ route('deck.update', { deck_id: deck.id }) }}?_method=PUT"
      method="POST"
    >
      {{ csrfField() }}


      <!-- Nom du deck -->
      <div style="margin-bottom: 1rem;">
        <label for="name" style="display:block; margin-bottom:0.5rem; color:#ffd700;">Nom du deck</label>
        <input
          type="text"
          id="name"
          name="name"
          value="{{ deck.name }}"
          style="width:100%; padding:8px; border-radius:6px; border:1px solid #444; background:#222; color:#f0f0f0; box-sizing:border-box;"
          required
        >
      </div>

      <!-- Description -->
      <div style="margin-bottom: 1rem;">
        <label for="description" style="display:block; margin-bottom:0.5rem; color:#ffd700;">Description</label>
        <textarea
